---
import ToastContainer from '../components/ToastContainer';
const logoSrc = '/agreed-time-logo.svg';


interface Props {
	title?: string;
	description?: string;
	image?: string;
}

const { 
	title = 'AgreedTime | Modern Event Scheduling', 
	description = 'Modern scheduling made simple. No signup required. Create an event, share the link, and find the best time for everyone.',
	image = '/icon-512.png' // Use the large icon as a fallback OG image
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://agreedtime.com');
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="preload" as="image" href="/agreed-time-logo.svg" />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalURL} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.url)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.url)} />

		<!-- Favicons & App Icons -->
		<link rel="icon" type="image/svg+xml" href="/agreed-time-logo.svg" />
		<link rel="icon" type="image/png" sizes="192x192" href="/icon-192.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="icon" href="/favicon.ico" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="mask-icon" href="/agreed-time-logo.svg" color="#0891b2" />
		<meta name="apple-mobile-web-app-title" content="AgreedTime" />
		<meta name="application-name" content="AgreedTime" />
		<meta name="msapplication-TileColor" content="#0891b2" />
		<meta name="theme-color" content="#f8fafc" />

		<link rel="manifest" href="/manifest.webmanifest" />
		<meta name="generator" content={Astro.generator} />

		<style is:global>
			/* Minimal reset (preflight disabled) */
			*, ::before, ::after {
				box-sizing: border-box;
				border-width: 0;
				border-style: solid;
				border-color: #e5e7eb;
			}
			html {
				line-height: 1.5;
			}
			body {
				margin: 0;
			}
			a {
				color: inherit;
				text-decoration: inherit;
			}
			button, input, textarea, select, optgroup {
				font: inherit;
				color: inherit;
			}
			img, video {
				max-width: 100%;
				height: auto;
				display: block;
			}
			table {
				border-collapse: collapse;
			}

			/* Film Grain Texture */
			.film-grain {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				pointer-events: none;
				z-index: 9999;
				opacity: 0.03;
				background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='1'/%3E%3C/svg%3E");
			}

			/* Heatmap cell with dynamic opacity */
			.heatmap-cell {
				background-color: rgba(225, 29, 72, var(--cell-opacity, 0));
			}

			/* Pop-in animation for attention-grabbing elements */
			@keyframes popIn {
				0% { transform: scale(0); opacity: 0; }
				80% { transform: scale(1.1); opacity: 1; }
				100% { transform: scale(1); opacity: 1; }
			}
			.animate-pop-in {
				animation: popIn 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
			}

		</style>
	</head>
	<body class="bg-paper text-ink font-serif antialiased selection:bg-film-accent selection:text-white overflow-x-hidden flex flex-col min-h-screen">
		<div class="film-grain"></div>
		
		<header class="fixed top-0 left-0 w-full bg-paper z-40 border-b border-film-border shadow-sm">
			<div class="w-full flex items-center justify-between px-4 sm:px-6 lg:px-8 py-3">
				<a href="/" class="flex items-center gap-0 group">
					<img src={logoSrc} alt="AgreedTime Logo" class="h-8 w-8 sm:h-9 sm:w-9 transition-transform group-hover:scale-105" />
					<span class="font-sans font-bold text-xl sm:text-2xl text-ink tracking-tight">AgreedTime</span>
				</a>
				<!-- Future: Mobile Menu Toggle / Auth Buttons -->
				<nav>
					<!-- Placeholder for menu items -->
				</nav>
			</div>
		</header>

		<main class="pt-[4.5rem] flex-grow"> {/* Adjust padding top to account for fixed header height */}
			<slot />
		</main>

		<footer class="py-8">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<p class="text-[10px] sm:text-xs text-ink/30 font-mono tracking-widest">
					&copy; {new Date().getFullYear()} AgreedTime
				</p>
			</div>
		</footer>

		<ToastContainer client:load />
	</body>
</html>
