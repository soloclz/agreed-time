---
interface Props {
	title?: string;
}

const { title = 'AgreedTime' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/agreed-time-logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Shippori+Mincho:wght@400;700&family=Space+Mono:wght@400;700&family=Zen+Kaku+Gothic+New:wght@400;500;700&display=swap" rel="stylesheet">
		<title>{title}</title>
		<style is:global>
			/* Film Grain Texture */
			.film-grain {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				pointer-events: none;
				z-index: 9999;
				opacity: 0.03;
				background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='1'/%3E%3C/svg%3E");
			}
		</style>
	</head>
	<body class="bg-paper text-ink font-serif antialiased selection:bg-film-accent selection:text-white overflow-x-hidden">
		<div class="film-grain"></div>
		
		<header class="fixed top-0 left-0 w-full bg-paper z-40 border-b border-film-border shadow-sm">
			<div class="w-full flex items-center justify-between px-4 sm:px-6 lg:px-8 py-3">
				<a href="/" class="flex items-center gap-0 group">
					<img src="/agreed-time-logo.svg" alt="AgreedTime Logo" class="h-8 w-8 sm:h-9 sm:w-9 transition-transform group-hover:scale-105" />
					<span class="font-sans font-bold text-xl sm:text-2xl text-ink tracking-tight">AgreedTime</span>
				</a>
				<!-- Future: Mobile Menu Toggle / Auth Buttons -->
				<nav>
					<!-- Placeholder for menu items -->
				</nav>
			</div>
		</header>

		<main class="pt-[4.5rem]"> {/* Adjust padding top to account for fixed header height */}
			<slot />
		</main>
	</body>
</html>
