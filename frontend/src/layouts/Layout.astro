---
import ToastContainer from '../components/ToastContainer';
const logoSrc = '/agreed-time-logo.svg';


interface Props {
	title?: string;
}

const { title = 'AgreedTime' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="mask-icon" href="/favicon.svg" color="#0891b2" />
		<link rel="manifest" href="/manifest.webmanifest" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style is:global>
			/* Minimal reset (preflight disabled) */
			*, ::before, ::after {
				box-sizing: border-box;
				border-width: 0;
				border-style: solid;
				border-color: #e5e7eb;
			}
			html {
				line-height: 1.5;
			}
			body {
				margin: 0;
			}
			a {
				color: inherit;
				text-decoration: inherit;
			}
			button, input, textarea, select, optgroup {
				font: inherit;
				color: inherit;
			}
			img, video {
				max-width: 100%;
				height: auto;
				display: block;
			}
			table {
				border-collapse: collapse;
			}

			/* Film Grain Texture */
			.film-grain {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				pointer-events: none;
				z-index: 9999;
				opacity: 0.03;
				background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='1'/%3E%3C/svg%3E");
			}

			/* Heatmap cell with dynamic opacity */
			.heatmap-cell {
				background-color: rgba(225, 29, 72, var(--cell-opacity, 0));
			}

		</style>
	</head>
	<body class="bg-paper text-ink font-serif antialiased selection:bg-film-accent selection:text-white overflow-x-hidden">
		<div class="film-grain"></div>
		
		<header class="fixed top-0 left-0 w-full bg-paper z-40 border-b border-film-border shadow-sm">
			<div class="w-full flex items-center justify-between px-4 sm:px-6 lg:px-8 py-3">
				<a href="/" class="flex items-center gap-0 group">
					<img src={logoSrc} alt="AgreedTime Logo" class="h-8 w-8 sm:h-9 sm:w-9 transition-transform group-hover:scale-105" />
					<span class="font-sans font-bold text-xl sm:text-2xl text-ink tracking-tight">AgreedTime</span>
				</a>
				<!-- Future: Mobile Menu Toggle / Auth Buttons -->
				<nav>
					<!-- Placeholder for menu items -->
				</nav>
			</div>
		</header>

		<main class="pt-[4.5rem]"> {/* Adjust padding top to account for fixed header height */}
			<slot />
		</main>
		<ToastContainer client:load />
	</body>
</html>
