---
import Layout from '../layouts/Layout.astro';
import CreateEventForm from '../components/CreateEventForm';
---

<Layout title="Create an Event - AgreedTime">
  <main class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-2">Create a New Event</h1>
        <p class="text-lg text-gray-600">
          Set up your event and select the time slots you want to offer
        </p>
      </div>

      <div class="bg-white rounded-lg shadow-sm p-8">
        <CreateEventForm client:load />
      </div>
    </div>
  </main>
</Layout>
