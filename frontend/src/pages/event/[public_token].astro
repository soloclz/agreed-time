---
import Layout from '../../layouts/Layout.astro';
import EventGuestForm from '../../components/EventGuestForm';

const { public_token } = Astro.params;

if (!public_token) {
  // Client-side redirect will handle this for static output
  // For SSR, Astro.redirect('/404') would work
  // but for static, it's best to handle this in JS or by server rewrite rules
}
---

<Layout title={`Event - ${public_token}`}>
  <main class="min-h-screen py-8 sm:py-12 px-4 sm:px-6 lg:px-8 bg-paper">
    <div class="max-w-3xl mx-auto">
      <EventGuestForm client:load publicToken={public_token} />
    </div>
  </main>
</Layout>
