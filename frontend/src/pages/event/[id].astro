---
import Layout from '../../layouts/Layout.astro';
import EventGuestForm from '../../components/EventGuestForm';

export const prerender = false; // Mark as non-prerenderable since data is dynamic

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/404');
}
---

<Layout title={`Event - ${id}`}>
  <main class="min-h-screen py-8 sm:py-12 px-4 sm:px-6 lg:px-8 bg-paper">
    <div class="max-w-3xl mx-auto">
      <EventGuestForm client:load eventId={id} />
    </div>
  </main>
</Layout>
