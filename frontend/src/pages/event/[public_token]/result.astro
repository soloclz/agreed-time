---
import Layout from '../../../layouts/Layout.astro';
import EventResultView from '../../../components/EventResultView';

export const prerender = false; // Mark as non-prerenderable since data is dynamic

const { public_token } = Astro.params;

if (!public_token) {
  return Astro.redirect('/404');
}
---

<Layout title={`Event Results - ${public_token}`}>
  <main class="min-h-screen py-8 sm:py-12 px-4 sm:px-6 lg:px-8 bg-paper">
    <div class="max-w-3xl mx-auto">
      <EventResultView client:load publicToken={public_token} />
    </div>
  </main>
</Layout>
